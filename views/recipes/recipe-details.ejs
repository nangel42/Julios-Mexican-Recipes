<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/header.ejs', {title: `${Recipe.name} | Julio's Mexican Recipes`}) %>
    <link rel="stylesheet" href="/styles/recipe-details.css">
    <link rel="stylesheet" href="/styles/main.css">
</head>

<body>
    <%- include('../partials/nav.ejs') %>

    <main>
        <div class = "read">
            <img src="<%= Recipe.picture %>">
        
            <div class="info">
                <h2 class="recipe-name"><%= Recipe.name %></h2>
                <section>
                    <p>Description: <%= Recipe.description %></p>
                    <p>Food Type: <%= Recipe.foodType %></p>
                    <p>Ingredients: <%= Recipe.ingredients %></p>
                    <p>Instructions: <%= Recipe.instructions %></p>
                </section>
                <section class="actions">
                    <a href="/recipes/<%= Recipe._id %>/edit" class="btn">Edit Recipe</a>
                    
                    <form action="/recipes/<%= Recipe._id %>?_method=DELETE" method="POST">
                        <input type="submit" value="Delete Recipe">
                    </form>
                </section>
            </div>
        </div>
    </main>

    <%- include('../partials/footer.ejs') %>
</body>

</html>